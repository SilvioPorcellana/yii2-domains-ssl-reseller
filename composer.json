{
  "name": "themavensystem/yii2-domains-ssl-reseller",

  "type": "yii2-extension",
  "minimum-stability": "dev",

  "description": "An Yii2 extension providing a common interface to SSL/domains resellers like Namecheap, Godaddy, etc.",
  "keywords": ["yii2", "reseller", "namecheap", "godaddy"],
  "license": "BSD-3-Clause",
  "support": {
    "issues": "https://github.com/SilvioPorcellana/yii2-domains-ssl-reseller/issues",
    "wiki": "https://github.com/SilvioPorcellana/yii2-domains-ssl-reseller/wiki",
    "source": "https://github.com/SilvioPorcellana/yii2-domains-ssl-reseller"
  },
  "authors": [
    {
      "name": "Silvio Porcellana",
      "email": "silvio.porcellana@gmail.com"
    }
  ],

  "require": {
    "yiisoft/yii2": "~2.0.0",
    "php-http/client-implementation": "^1.0",
    "php-http/httplug": "^1.0",
    "php-http/message-factory": "^1.0",
    "php-http/discovery": "^1.0"
  },

  "require-dev": {
    "yiisoft/yii2": "~2.0.0",
    "phpunit/phpunit": "^4.5 || ^5.0",
    "php-http/guzzle5-adapter": "^1.0",
    "guzzlehttp/psr7": "^1.2",
    "mockery/mockery": "^0.9",
    "illuminate/support": "^5.0"
  },

  "autoload": {
    "psr-4": {
      "TheMavenSystem\\DomainsSSLReseller\\": "src"
    }
  },

  "scripts": {
    "test": "vendor/bin/phpunit",
    "test-ci": "vendor/bin/phpunit --coverage-text --coverage-clover=build/coverage.xml"
  }
}